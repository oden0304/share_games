<div class="text-center pt-5 nes-container is-rounded is-dark mx-auto">
  <%= form_with model: comment, url: public_post_comments_path(post), method: :post, local: false do |f| %>
      <%= f.text_area :comment, placeholder: "コメントしよう！", size: "25x10" %>
      <%= f.submit "コメントする", class: "btn btn-md btn-warning" %>
  <% end %>
</div>