<% if post.comments.present? %>
    <div class="border-top border-white w-100 p-5">
      <% post.comments.each do |comment| %>
        <table class="p-5 border-bottom border-white w-100 pb-3 mb-3">
          <tr>
            <th><%= image_tag comment.user.get_profile_image, class: "rounded-circle", size: "80x80" %></th>
            <th><h2 class="ml-5"><b><%= post.user.name %></b></h2></th>
          </tr>
          <tr>
            <th width="120"></th>
            <th class="pt-3 pb-5"><%= safe_join(comment.comment.split("\n"),tag(:br)) %></th>
          </tr>
          <% if current_admin %>
            <th class="mb-5"><%= link_to "削除", public_post_comment_path(post.id,comment.id), data: { confirm: "【確認】コメントを削除してよろしいですか？" }, method: :delete, remote: true, class: "btn btn-md btn-danger" %></th>
          <% end %>
        </table>
      <% end %>
    </div>
  <% else %>
    <div class="text-center w-100 border-top border-white pt-5">
      <b>コメントはありません。</b>
    </div>
  <% end %>