<div class="container border">
  <div class="row">
    <div class="col-md-8">
      <h2>投稿詳細</h2>
      <table class="ml-5">
        <% if @user.profile_image.attached? %>
          <tr>
            <th><%= image_tag @user.profile_image, class: "rounded-circle", size: "200x200" %></th>
            <th><h2 class="ml-5"><%= @user.name %></h2></th>
          </tr>
        <% else %>
          <tr>
            <th><%= image_tag 'no_image', class: "rounded-circle", size: "200x200" %></th>
            <th><h2 class="ml-5"><%= @user.name %></h2></th>
          </tr>
        <% end %>
        <tr>
          <th class="p-5"><%= safe_join(@post.text.split("\n"),tag(:br)) %></th>
        </tr>
        <tr>
          <th>
            <%= render "public/posts/favorite", post: @post %>
          </th>
        </tr>
      </table>
      <table>
      <tbody>
        <% @post.comments.each do |comment| %>
          <% if @user.profile_image.attached? %>
            <tr>
              <th><%= image_tag @user.profile_image, class: "rounded-circle", size: "200x200" %></th>
              <th><h2 class="ml-5"><b><%= @user.name %></b></h2></th>
            </tr>
          <% else %>
            <tr>
              <th><%= image_tag 'no_image', class: "rounded-circle", size: "200x200" %></th>
              <th><h2 class="ml-5"><b><%= @user.name %></b></h2></th>
            </tr>
          <% end %>
            <div id="comment_area">
              <%= render "public/comments/comment", comment: comment %>
            </div>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4" id="comment_form">
      <%= render "public/comments/comment_form", comment: @comment, post: @post %>
    </div>
  </div>
</div>