<div class="container pt-5 h-100" style="background-color:#fde9dd;">
  <h2 class="ml-5">新規登録</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/user/shared/error_messages", resource: resource %>
  
    <div class="field mt-5 ml-5">
      <%= f.label :ユーザーネーム %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
  
    <div class="field mt-3 ml-5">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  
    <div class="field mt-3 ml-5">
      <%= f.label :パスワード（確認） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    
    <div class="mt-3 ml-5">
      必ず<%= link_to "利用規約", public_homes_terms_path %>を確認の上、同意するにチェックしてください。
    </div>
    <div class="ml-5">
      <%= f.check_box :agreement, :as => :boolean, checked:false %>
      <%= f.label :agreement, "同意する" %>
    </div>
    <div>
      
    </div>
    <div class="actions mt-2 ml-5">
      <%= f.submit "登録", class: "btn btn-success"%>
    </div>
  <% end %>
  <div class="mt-3">
    <%= render "public/user/shared/links" %>
  </div>
</div>