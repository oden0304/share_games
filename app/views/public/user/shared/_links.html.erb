<div class="ml-5">
  <%- if controller_name != 'sessions' %>
    登録がお済みの方は<%= link_to "こちら", new_session_path(resource_name) %><br />
  <% end %>
  
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    登録がまだの方は<%= link_to "こちら", new_registration_path(resource_name) %><br />
  <% end %>
</div>