<div class="container nes-container is-rounded is-dark mx-auto my-bgc">
  <h2 class="ml-5 mt-5">ログイン</h2>
  
  <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "public/user/shared/error_messages", model: f.object %>
    
    <div class="field mt-5 ml-5">
      <%= f.label :ユーザーネーム %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
  
    <div class="field mt-3 ml-5">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field mt-3 ml-5">
        <%= f.check_box :remember_me %>
        <%= f.label :ログイン情報を保存する %>
      </div>
    <% end %>
  
    <div class="actions mt-5 ml-5">
      <%= f.submit "ログイン", class: "btn btn-success" %>
    </div>
  <% end %>
  
  <%= render "public/user/shared/links" %>
</div>