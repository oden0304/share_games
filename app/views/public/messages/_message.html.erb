<%= form_with model: message, url: public_messages_path, method: :post, local: false do |f| %>
  <%= flash.now[:alert] %>
  <%= f.text_area :content, placeholder: "メッセージを入力して下さい" , size: "100x2", class: "form_size" %>
  <%= f.hidden_field :room_id, value: room.id %>
  <%= f.submit '送信', class: "btn btn-md btn-primary mb-5" %>
<% end %>